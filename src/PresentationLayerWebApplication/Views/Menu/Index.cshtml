@model List<DataAccessLayer.Models.Items>

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Item Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.item_id</td>
                <td>@item.name</td>
                <td>@item.price.ToString("C")</td> 
            </tr>
        }
    </tbody>
</table>
