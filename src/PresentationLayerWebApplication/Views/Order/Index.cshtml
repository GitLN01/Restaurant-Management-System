@model List<DataAccessLayer.Models.Orders>

@{
    ViewData["Title"] = "Orders";
}

<div class="content">
    <h1>Orders</h1>
    <div class="table-controls">
        <input type="search" id="orderSearch" placeholder="Search..." onkeyup="searchTable('orderSearch', 'orderTable')">
        <select id="orderSort" onchange="sortTable('orderTable', this.selectedIndex)">
            <option value="0">Sort by Order ID</option>
            <option value="1">Sort by Customer ID</option>
            <option value="2">Sort by Table Number</option>
            <option value="3">Sort by Order Time</option>
        </select>
    </div>
    <table id="orderTable" class="table table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer ID</th>
                <th>Table Number</th>
                <th>Order Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.order_id</td>
                    <td>@order.customer_id</td>
                    <td>@order.table_number</td>
                    <td>@order.time.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
