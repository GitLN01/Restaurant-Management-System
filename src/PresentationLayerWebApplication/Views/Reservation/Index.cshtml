@model List<DataAccessLayer.Models.Reservations>

@{
    ViewData["Title"] = "Reservations";
}

<div class="content">
    <h1>Reservations</h1>
    <div class="table-controls">
        <input type="search" id="reservationSearch" placeholder="Search..." onkeyup="searchTable('reservationSearch', 'reservationTable')">
        <select id="reservationSort" onchange="sortTable('reservationTable', this.selectedIndex)">
            <option value="0">Sort by Reservation ID</option>
            <option value="1">Sort by Customer ID</option>
            <option value="2">Sort by Reservation Time</option>
        </select>
    </div>
    <table id="reservationTable" class="table table-bordered">
        <thead>
            <tr>
                <th>Reservation ID</th>
                <th>Customer ID</th>
                <th>Reservation Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.reservation_id</td>
                    <td>@reservation.customer_id</td>
                    <td>@reservation.date.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
